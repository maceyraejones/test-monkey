<%- include('layouts/header')%>

<div class="container">

    <div class="row my-4">
    <div class="col-lg-12">
        <% if (message) {%>
            <div class="alert alert-dismissible fade show alert-<%= message.type%>" role="alert"><button class="btn-close" type="button" data-bs-dismiss="alert" arria-label="close"></button><strong><% message.message %> </strong></div>
            <% }%>
    <div class="table-responsive">

        <% if(cards != '') { %> 
          
<table class="table table-striped text-center">

<thread>

<tr class="table-dark">
<th> ID</th>
<th> images</th>
<th> Name</th>
<th> Age</th>
<th> Like</th>
<th> Action</th>

</tr>


</thread>
<tbody>
    <% cards.forEach((row, index) => { %> 
    
<tr class="align-middle">
<td><%= index %> </td>
<td><img src="<%= row.image %> " width="50" alt=""/></td>
<td><%= row.name %> </td>
<td><%= row.age %> </td>
<td><%= row.like %> </td>

<td>

    <a class="text-success "href="/edit/<%= row._id %> "><i class="fas fa-edit fa-lg mx-1"></i></a>
    <a class="text-danger "href="/delete/<%= row._id %> "><i class="fas fa-trash fa-lg mx-1"></i></a>

</td>


</tr>
<% }) %> 
</tbody>

</table>

<% } else {%> 
    <h1 class="text-center text-secondary mt-5"> No User in the Database</h1>
    <% } %> 
    </div>
    
    </div>
    
  
    
    </div>
    
    
    
    
    </div>